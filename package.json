{
  "name": "minicomp",
  "description": "A suite of tools for minimal computing",
  "version": "0.0.0",
  "author": "Moacir P. de SaÌ Pereira @muziejus",
  "bin": {
    "minicomp": "./bin/run"
  },
  "bugs": "https://github.com/muziejus/minicomp/issues",
  "dependencies": {
    "@oclif/command": "^1.5.0",
    "@oclif/config": "^1.7.4",
    "@oclif/plugin-help": "^2.1.1",
    "@oclif/plugin-not-found": "*",
    "@oclif/plugin-commands": "*",
    "@oclif/plugin-update": "*",
    "@oclif/plugin-autocomplete": "*",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-unicorn": "^6.0.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.18.0",
    "@oclif/test": "^1.2.0",
    "fancy-test": "^1.4.0",
    "chai": "^4.1.2",
    "cucumber": "^4.2.1",
    "globby": "^8.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/muziejus/minicomp",
  "keywords": [
    "oclif"
  ],
  "license": "GPL-3.0-or-later",
  "main": "src/index.js",
  "oclif": {
    "commands": "./src/commands",
    "bin": "minicomp",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-commands",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-update"
    ]
  },
  "repository": "muziejus/minicomp",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json npm-shrinkwrap.json",
    "posttest": "xo .",
    "prepack": "oclif-dev manifest && oclif-dev readme && npm shrinkwrap",
    "test": "xo && nyc mocha --forbid-only \"test/**/*.test.js\"",
    "cucumber": "cucumber-js",
    "version": "oclif-dev readme && git add README.md"
  },
  "xo": {
    "envs": [
      "amd"
    ],
    "globals": [
      "it",
      "describe"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "require-await": 0,
      "quotes": [
        "error",
        "double"
      ]
    },
    "overrides": [
      {
        "files": "features/**/*.js",
        "rules": {
          "new-cap": 0
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  }
}
